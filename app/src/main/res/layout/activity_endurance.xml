<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.meizu.endurance.Endurance">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/manfid"
        android:id="@+id/manfid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/name"
        android:id="@+id/vendor_name"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/manfid"
        android:layout_alignLeft="@+id/manfid"
        android:layout_alignStart="@+id/manfid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/free_size"
        android:id="@+id/free"
        android:layout_above="@+id/total_write"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name"
        android:layout_marginBottom="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total_write_size_mb"
        android:id="@+id/total_write"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/free"
        android:layout_alignStart="@+id/free" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/emmc_life_time_a"
        android:id="@+id/life_time_a"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/total_write"
        android:layout_alignLeft="@+id/total_write"
        android:layout_alignStart="@+id/total_write" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/emmc_life_time_b"
        android:id="@+id/life_time_b"
        android:layout_below="@+id/life_time_a"
        android:layout_alignLeft="@+id/life_time_a"
        android:layout_alignStart="@+id/life_time_a"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/capacity"
        android:id="@+id/emmc_size"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/vendor_name"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/button_start"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:id="@+id/button_stop"
        android:layout_alignTop="@+id/button_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
